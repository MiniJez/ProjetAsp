@model ProjectAsp.Models.Restaurant

@{
    ViewData["Title"] = "RestAdvisor";
}

<h1>Modifier</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="nom" class="control-label">Nom</label>
                <input asp-for="nom" class="form-control" />
                <span asp-validation-for="nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tel" class="control-label">Téléphone</label>
                <input asp-for="tel" class="form-control" />
                <span asp-validation-for="tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <h4>Adresse</h4>
            <div class="form-group">
                <label asp-for="adresse.rue" class="control-label">Rue</label>
                <input asp-for="adresse.rue" class="form-control" />
                <span asp-validation-for="adresse.rue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresse.cp" class="control-label">Code postal</label>
                <input asp-for="adresse.cp" class="form-control" />
                <span asp-validation-for="adresse.cp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresse.ville" class="control-label">Ville</label>
                <input asp-for="adresse.ville" class="form-control" />
                <span asp-validation-for="adresse.ville" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour gestion</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
