@model ProjectAsp.Models.Restaurant

@{
    ViewData["Title"] = "RestAdvisor";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nom)
        </dd>
        <dt class="col-sm-2">
            Téléphone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tel)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>

    <h4>Adresse</h4>

    <dl class="row">
        <dt class="col-sm-2">
            Rue
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.adresse.rue)
        </dd>
        <dt class="col-sm-2">
            Ville
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.adresse.ville)
        </dd>
        <dt class="col-sm-2">
            Code postal
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.adresse.cp)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Modifier</a> |
    <a asp-action="Index">Retour gestion</a>
</div>
