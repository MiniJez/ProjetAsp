@model ProjectAsp.Models.Note

@{
    ViewData["Title"] = "RestAdvisor";
}

<h1>Supprimer</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Restaurant
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.restaurant.nom)
        </dd>
        <dt class = "col-sm-2">
            Note
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.note)
        </dd>
        <dt class = "col-sm-2">
            Date de la dernière visite
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateDerniereVisite)
